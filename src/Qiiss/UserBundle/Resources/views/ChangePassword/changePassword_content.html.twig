<!DOCTYPE html>
<html>
<pre>
</pre>
<head>
	<meta charset="utf-8">
	<title>{% block title %}FAQ{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/qiissuser/css/selfAdmin.css') }}" type="text/css" media="all" />
		{% endblock %}
			<script type="text/javascript" src="{{ asset('bundles/qiissgeneral/js/jquery-1.8.3.min.js') }}"></script>
			<script type="text/javascript" src="{{ asset('bundles/qiissuser/js/changePassword.js') }}"></script>
</head>
<body>
{% include 'QiissUserBundle:Profile:header.html.twig' %}
<div id="main_container">
	<div class="self_admin_main_border">
		<div id="self_admin_main_header">
			Account Settings
		</div>
		<div class="self_admin_main_left">
			<div class="section_header">
				Change Password
			</div>
			<div class="section_header">
				Forgot Password
			</div>
			<div class="section_header last">
				Facebook Account
			</div>
		</div>
		<div class="self_admin_main_right">
			<div class="header">
				<div class="inner">Change Password</div>
			</div>
			<div class="section">
				<div class="section_body">
					<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
					    <input type="text" id="current_password" name="fos_user_change_password_form[current_password]" placeholder="{{ 'Current Password'|trans({}, 'FOSUserBundle') }}" required="required" />
					    <div class="seperator"></div>
					    <input type="password" id="new_password_first" name="fos_user_change_password_form[new][first]" placeholder="{{ 'New Password'|trans({}, 'FOSUserBundle') }}" required="required" />
					    <input type="password" id="new_password_second" name="fos_user_change_password_form[new][second]" placeholder="{{ 'Confirm Password'|trans({}, 'FOSUserBundle') }}" required="required" />
					    <input type="hidden" id="token" name="fos_user_change_password_form[_token]" value="{{form._token.vars.value}}" />
					    <div>
					        <input type="submit" class="submit" value="{{ 'Submit'|trans({}, 'FOSUserBundle') }}" />
					    </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
</html>
