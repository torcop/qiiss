
{% block body %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(registration) }} method="POST" class="signup_form" id="signup_form">
	<div>
		<div class="error_message username_error_message">Error</div>
		{{form_widget(registration.username, { 'attr': {'placeholder': 'Full Name'} })}}
	</div>
    <div>
		<div class="error_message email_error_message">Error</div>
		{{form_widget(registration.email, { 'attr': {'placeholder': 'Email Address'} })}}
	</div>
    <div>
		<div class="error_message password_error_message">Error</div>
		{{form_widget(registration.plainPassword.first, { 'attr': {'placeholder': 'Password'} })}}
	</div>
	<div>
		{{form_widget(registration.plainPassword.second, { 'attr': {'placeholder': 'Confirm Password'} })}}
	</div>
	<div>
		<div class="error_message birthday_error_message">Error</div>
		{{form_widget(registration.dob.day, { 'attr': {'class': 'birthday'} })}}
		{{form_widget(registration.dob.month, { 'attr': {'class': 'birthday'} })}}
		{{form_widget(registration.dob.year, { 'attr': {'class': 'birthday last'} })}}
	</div>
    {{form_widget(registration._token)}}
    <div>
        <input type="submit" value="{{ 'Sign Up'|trans({}, 'FOSUserBundle') }}" class="submit" />
    </div>
</form>
{% endblock %}
